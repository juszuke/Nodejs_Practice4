<div class="message is-light">
  <div class="message-header">
    <p>Dashboard</p>
  </div>
  <div class="message-body">
    <p>All Users</p>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Password</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(user => { %>
      <tr>
        <td>
          <a href="<%=`/users/${user._id}`%>">
            <%= user.name %>
          </a>
        </td>
        <td>
          <%= user.email %>
        </td>
        <td>
          <%= user.password %>
        </td>
        <td>
          <a href="<%=`/users/${user._id}/edit`%>">
            Edit
          </a>
        </td>
        <td>
          <a href="<%=`/users/${user._id}/delete?_method=DELETE` %>" onclick="return confirm('Are you sure you want to delete this record?')" a>Delete</a>
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
</div>
